<%- include('../../fragments/header.ejs') %>
<div id="text-banner">
        <% if(banner=="add") { %>
            <div class="container"><h2><%= __('coach.new')%></h2></div>
        <% } %>
        <% if(banner=="delete") { %>
            <div class="container"><h2><%= __('coach.delete')%></h2></div>
        <% } %>
        <% if(banner=="update") { %>
            <div class="container"><h2><%= __('coach.update')%></h2></div>
        <% } %>
</div>
<main>
        <h2><%= __('coach.list.pageTitle')%></h2>
	<table id="trenerzy" class="table-list">
    		<thead>
    		<tr>
                <th><%= __('player.fields.firstName') %></th>
                <th><%= __('player.fields.lastName')%></th>
                <th><%= __('player.fields.country')%></th>
                <th><%= __('list.actions.title')%></th>
    		</tr>
		</thead>
		<tbody>
        <% for (let coach of coaches) { %>
            <tr>
                <td><%= coach.firstName %></td>
                <td><%= coach.lastName %></td>
                <td><%= coach.country %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/coaches/details/<%=coach.id%>" class="list-actions-button-details"><%= __('list.actions.details')%></a></li>
                        <% if(loggedUser && (loggedUser.id== coach.idPlayer || loggedUser.level==2)) { %>
                        <li><a href="/coaches/edit/<%=coach.id%>" class="list-actions-button-edit"><%= __('list.actions.edit')%></a></li>
                        <% } %>
                        <% if(loggedUser && (loggedUser.id== coach.idPlayer|| loggedUser.level==2)) { %>
                        <li><a href="/coaches/delete/<%=coach.id%>" class="list-actions-button-delete"><%= __('list.actions.delete')%></a></li>
                        <% } %>
                    </ul>
                </td>
            </tr>
        <% } %>
</tbody>
	</table>
        <% if(loggedUser) { %>
        <p><a class="button-add" href="/coaches/add"><%= __('coach.list.addNew')%></a></p>
        <% } %>
    </main>
    <%- include('../../fragments/footer.ejs') %>


